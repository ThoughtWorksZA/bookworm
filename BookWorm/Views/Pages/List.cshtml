@Scripts.Render("~/Scripts/puku/confirmModal.js")
@Scripts.Render("~/Scripts/puku/clickableDiv.js")

@using BookWorm.Models
@model IEnumerable<BookWorm.Models.StaticPage>

<h2>Pages</h2>

<p>
    @if (Html.ViewContext.HttpContext.User.Identity.IsAuthenticated)
    {
        @Html.ActionLink("Create New", "Create", null, new {Id = "createNewStaticPageLink"})
    }
</p>
    @foreach (StaticPage item in Model)
    {
        <div class="row link-row">
            <div data-clickable-url="/Pages/Details/@item.Id">
                <div class="span10">
                    <span class="lead">@Html.DisplayFor(modelItem => item.Title)</span>
                </div>
            </div>
            @if (Html.ViewContext.HttpContext.User.Identity.IsAuthenticated)
            {
                <div class="span1">
                    @Html.ActionLink("Edit", "Edit", new {id = item.Id})
                </div>
                <div class="span1">
                    @using (Html.BeginForm("Delete", "Pages", new {@id = item.Id}))
                    {
                        @Html.HttpMethodOverride(HttpVerbs.Delete)
                        <input type="submit" class="btn btn-danger" value="x" data-confirm="This action can not be undone. Are you sure you want to delete this page?" />
                    }
                </div>
            }
        </div>
               <div class="list-seperator"></div>
    }

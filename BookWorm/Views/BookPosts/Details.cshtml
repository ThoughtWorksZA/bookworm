@Scripts.Render("~/Scripts/puku/confirmModal.js")
@model BookWorm.ViewModels.BookPostInformation
<div class="row-fluid">
        <div class="row-content">
            <div class="span12"> 
                <p class="lead">@Html.DisplayFor(model => model.BookPost.Title)</p>
            </div>
        </div>
</div>
<div class="row-fluid">
<div class="row-content">
    <div class="span12"> 
        <fieldset>
            <div class="display-field">
                @Html.Raw(ViewBag.transformedContent)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.BookPost.CreatedAt)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.BookPost.CreatedAt)
            </div>

            <div class="display-label">
                @Html.DisplayNameFor(model => model.BookPost.UpdatedAt)
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.BookPost.UpdatedAt)
            </div>
        </fieldset>
        <div class="some-small-space"></div>
        <p> @Html.ActionLink("Back to List", "Details", "Books", new { id = Model.BookId }, null)</p>
         @if (Html.ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
                    <div class="well">
                        <div class="row-fluid">
                            <div class="span10">
                                <span class="lead">Admin Tools</span>
                                 @Html.ActionLink("Edit post", "Edit", new { bookId=Model.BookId, id=Model.BookPost.Id })
                            </div>
                            <div class="span2">
                                @using (Html.BeginForm("Delete", "BookPosts", new { @bookId = Model.BookId, @id = Model.BookPost.Id }))
            {
                @Html.HttpMethodOverride(HttpVerbs.Delete)
                <input type="submit" class="btn btn-danger" value="Delete" data-confirm="This action can not be undone. Are you sure you want to delete this book post?" />
            } 
                            </div>
                        </div>
                    </div>
                }
           
        </div>
    </div>
</div>
</div>


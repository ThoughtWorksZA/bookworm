@model IEnumerable<BookWorm.ViewModels.BookPostInformation>

@foreach (var item in Model) {
    <div id="" class="accordion-body accordion-inner collapse in">
                <span class="lead">
            @Html.DisplayFor(modelItem => item.BookPost.Title)
        </span>
        <p>
            @Html.DisplayFor(modelItem => item.BookPost.Content)
            ...
        </p>
        @Html.ActionLink("View this review", "Details", "BookPosts", new { bookId=item.BookId, id=item.BookPost.Id }, null)
    </div>
}



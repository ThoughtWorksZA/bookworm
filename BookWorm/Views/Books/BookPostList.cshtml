@model IEnumerable<BookWorm.ViewModels.BookPostInformation>
<div class="accordion-group" >
    <div class="accordion-heading">
        <a class="accordion-toggle" data-toggle="collapse" data-parent="#posts-accordion" href="#@Model.First().Model.Type">
            @Model.First().Model.Type
        </a>
    </div>
    <div id="@Model.First().Model.Type" class="accordion-body collapse">
        <div class="accordion-inner">
            @foreach (var item in Model) {
                <span class="lead">
                    @Html.DisplayFor(modelItem => item.Model.Title)
                </span>
                <p>
                    @Html.Raw(item.Summary(350))
                </p>
                @Html.ActionLink("View this post", "Details", "BookPosts", new { bookId=item.BookId, id=item.Model.Id }, null)
                <hr/>
            }
        </div>
    </div>
</div>



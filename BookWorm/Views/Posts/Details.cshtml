@model BookWorm.ViewModels.PostInformation

@{
    ViewBag.Title = @Model.Model.Title;
}
<div class="row-fluid">
    <div class="row-content">
        <div class="span7">
            <ul class="breadcrumb">
                <li><a href="/Posts/News">News</a><span class="divider">/</span></li>
                <li class="active">@Html.DisplayFor(model => model.Model.Title)</li>
            </ul> 
        </div>
            <div class="span2">
            <a href="https://twitter.com/share" class="twitter-share-button" data-lang="en">Tweet</a>
        </div>
        <div class="span3">
            <div class="fb-like" data-href="http://www.puku.co.za/Posts/Details/@Model.Model.Id" data-send="true" data-layout="button_count" data-width="450" data-show-faces="true" data-action="recommend"></div>
        </div>

        </div>
    </div>
<div class="row-fluid">
    <div class="row-content">
        <div class="span12">
            <p class="lead">@Html.DisplayFor(model => model.Model.Title)</p>
            
        </div>
    </div>
</div>
<div class="row-fluid gray-body-row">
    <div class="row-content">
        <div class="span12">
            <fieldset>
                <div class="display-field">
                    @Html.Raw(Model.Content)
                </div>
            </fieldset>
            <p>
                @if (Html.ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Back to List", "List")
                    @Html.Raw(" | ")<i class="icon-edit"></i>
                    @Html.ActionLink("Edit", "Edit", new {id = Model.Model.Id})
                }
            </p>
        </div>
    </div>
</div>

<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

@Scripts.Render("~/Scripts/puku/confirmModal.js")
@Scripts.Render("~/Scripts/puku/clickableDiv.js")

@using BookWorm.Models
@using BookWorm.ViewModels
@model IEnumerable<BookWorm.ViewModels.PostInformation>


<div class="row-fluid">
    <div class="row-content">
        <div class="span12">
            <p class="lead">Posts</p>
            <p>
                @if (Html.ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
 @Html.ActionLink("Create New", "Create", null, new { Id = "createNewPostLink" })
                }
            </p>
        </div>
    </div>
</div>
<div class="row-fluid gray-body-row">
    <div class="row-content">
        <div class="span12">
            @foreach (PostInformation item in Model)
            {

                <div class="row link-row">
                    <div data-clickable-url="/Posts/Details/@item.Model.Id">
                        <div class="span10">
                            <h4>@Html.DisplayFor(modelItem => item.Model.Title)</h4>
                        </div>
                    </div>
                    @if (Html.ViewContext.HttpContext.User.Identity.IsAuthenticated)
                    {

                        <div class="span1">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Model.Id })
                        </div>

                        <div class="span1">
                            @using (Html.BeginForm("Delete", "Posts", new { @id = item.Model.Id }))
                            {
                                @Html.HttpMethodOverride(HttpVerbs.Delete)

                                <input type="submit" class="btn btn-danger" value="x" data-confirm="This action can not be undone. Are you sure you want to delete this post?" />
                            }
                        </div>
                    }
                </div>

                <div class="list-seperator"></div>
            }
        </div>
    </div>
</div>

